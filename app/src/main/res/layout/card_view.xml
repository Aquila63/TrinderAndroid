<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="dave.example.com.trinder"
    android:layout_marginTop="15dp"
    android:layout_width="330dp"
    android:layout_height="400dp"
    card_view:cardBackgroundColor="@color/cardColor"
    card_view:cardCornerRadius="5dp">

    <fragment
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:layout="@layout/fragment_card_view"
        android:name="dave.example.com.trinder.CardViewFragment"
        tools:layout="@layout/fragment_card_view"
        />

</android.support.v7.widget.CardView>
